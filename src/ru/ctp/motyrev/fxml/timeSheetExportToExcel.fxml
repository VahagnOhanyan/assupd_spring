<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="238.0" prefWidth="344.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.ctp.motyrev.controllers.TimeSheetReportController">
    <children>
        <Button fx:id="btnGenerate" disable="true" layoutX="182.0" layoutY="183.0" mnemonicParsing="false" onAction="#exportToExcel" prefHeight="28.0" prefWidth="132.0" text="Отчет">
            <font>
                <Font name="Calibri" size="15.0" />
            </font>
        </Button>
        <Button fx:id="btnCanc" layoutX="30.0" layoutY="183.0" mnemonicParsing="false" onAction="#actionClose" prefHeight="28.0" prefWidth="132.0" text="Отмена">
            <font>
                <Font name="Calibri" size="15.0" />
            </font>
        </Button>
        <DatePicker fx:id="startDate" layoutX="30.0" layoutY="136.0" prefHeight="31.0" prefWidth="132.0" promptText="с" />
        <DatePicker fx:id="endDate" layoutX="182.0" layoutY="136.0" prefHeight="31.0" prefWidth="132.0" promptText="по" />
        <ComboBox fx:id="yearBox" layoutX="30.0" layoutY="136.0"  prefHeight="31.0" prefWidth="132.0" visible="false" />
        <ComboBox fx:id="halfyearBox" layoutX="30.0" layoutY="136.0"  prefHeight="31.0" prefWidth="132.0" visible="false" />
        <ComboBox fx:id="monthBox" layoutX="30.0" layoutY="136.0"  prefHeight="31.0"  prefWidth="132.0" visible="false" />
        <ComboBox fx:id="quarterBox" layoutX="30.0" layoutY="136.0"  prefHeight="31.0" prefWidth="132.0" visible="false" />
        <fx:define>
            <ToggleGroup fx:id="toggleGroup" />
        </fx:define>
        <RadioButton fx:id="reportSwitch" layoutX="39.0" layoutY="15.0" selected="true" text="Дата" textAlignment="RIGHT" toggleGroup="$toggleGroup"/>
        <RadioButton fx:id="reportSwitchForQuarter" layoutX="39.0" layoutY="90.0" text="Квартал" textAlignment="RIGHT" toggleGroup="$toggleGroup" />
        <RadioButton fx:id="reportSwitchForMonth" layoutX="39.0" layoutY="53.0" text="Месяц" textAlignment="RIGHT" toggleGroup="$toggleGroup" />
        <RadioButton fx:id="reportSwitchForHalfYear" layoutX="184.0" layoutY="15.0" text="Полугодие" textAlignment="RIGHT" toggleGroup="$toggleGroup" />
        <RadioButton fx:id="reportSwitchForYear" layoutX="184.0" layoutY="53.0" text="Год" textAlignment="RIGHT" toggleGroup="$toggleGroup" />
    </children>
</AnchorPane>
